@using Microsoft.AspNetCore.Identity
@using WebData.Data.Entities
@{
    ViewData["Title"] = "Home Page";
    Layout = "~/Views/Shared/_AdminLogin.cshtml";
    @model LoginViewModel
    @inject SignInManager<User> SignInManager
    @inject UserManager<User> UserManager
    ViewBag.Title = "Login";
}


<div class="text-center">
 <h1 class="display-4">Welcome</h1>
</div>
<div class="login-box">
  <div class="login-logo">
    <a href="../../index2.html"><b>Admin</b>LTE</a>
  </div>
  <!-- /.login-logo -->
  <div class="card">
    <div class="card-body login-card-body">
      <p class="login-box-msg">Sign in to start your session</p>

      <form asp-action="Login" method="post" asp-controller ="Account" asp-route-data ="@Model.ReturnUrl">
          <div asp-validation-summary="ModelOnly"></div>
        <div class="input-group mb-3">
          <input asp-for="Email" placeholder="Email" class ="form-control"/>
          <div class="input-group-append">
            <div class="input-group-text">
              <span class="fas fa-envelope"></span>
            </div>
          </div>
        </div>
        <div class="input-group mb-3">
          <input asp-for="Password" class="form-control" placeholder="Password">
          <div class="input-group-append">
            <div class="input-group-text">
              <span class="fas fa-lock"></span>
            </div>
          </div>
        </div>
        <div class="row">
          <div class="col-8">
            <div class="icheck-primary">
              <input asp-for="RememberMe" id="remember">
              <label for="remember">
                Remember Me
              </label>
            </div>
          </div>
          <!-- /.col -->
          <div class="col-4">
            <button type="submit" value = "Login"  class="btn btn-primary btn-block">Sign In</button>
          </div>
          <!-- /.col -->
        </div>
      </form>

      <div class="social-auth-links text-center mb-3">
        <p>- OR -</p>
        <a href="#" class="btn btn-block btn-primary">
          <i class="fab fa-facebook mr-2"></i> Sign in using Facebook
        </a>
        <a href="#" class="btn btn-block btn-danger">
          <i class="fab fa-google-plus mr-2"></i> Sign in using Google+
        </a>
      </div>
      <!-- /.social-auth-links -->

      <p class="mb-1">
        <a asp-controller="Account" asp-action = "ForgotPassword">I forgot my password</a>
      </p>
      <p class="mb-0">
        <a asp-controller="Account" asp-action  = "Register"  class="text-center" >Register a new membership</a>
      </p>
    </div>
    <!-- /.login-card-body -->
  </div>
</div>
<!-- /.login-box -->
